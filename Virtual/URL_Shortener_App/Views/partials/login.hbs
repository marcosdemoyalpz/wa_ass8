<head>
    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
    <style type="text/css">
         :root #content>#right>.dose>.dosesingle,
         :root #content>#center>.dose>.dosesingle {
            display: none !important;
        }
    </style>
</head>

<body>
    <div class="container">
        <form class="form" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="form-signin-heading">Please sign in</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group">
                    <label for="username" class="sr-only">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Username" required="" autofocus="" maxlength="128">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="" maxlength="128">
                </div>
            </div>
            <div class="row">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </div>
        </form>
    </div>
</body>